generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  slug     String    @unique
  projects Project[]
}

model Project {
  id         Int      @id @default(autoincrement())
  title      String
  slug       String   @unique
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int
  images     Image[]
  createdAt  DateTime @default(now())
}

model Image {
  id        Int     @id @default(autoincrement())
  url       String
  publicId  String
  project   Project @relation(fields: [projectId], references: [id])
  projectId Int
}
